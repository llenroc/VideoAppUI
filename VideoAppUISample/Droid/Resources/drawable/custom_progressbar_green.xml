<?xml version="1.0" encoding="UTF-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:startColor="@color/colorRedTransparent"
                    android:centerColor="@color/colorRedTransparent"
                    android:centerY="1.0"
                    android:endColor="@color/colorRedTransparent"
                    android:angle="270"
            />
        </shape>
    </item>

 <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorGreen"
                    android:centerColor="@color/colorGreen"
                    android:centerY="1.0"
                    android:endColor="@color/colorGreen"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>

